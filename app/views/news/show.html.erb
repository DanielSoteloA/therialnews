<p style="color: green"><%= notice %></p>

<%= render @news %>

<div>
  <%= link_to "Back to news", news_index_path %>
  <% if user_signed_in? %>
    <% if current_user.id == @news.user_id %>
      <%= link_to "Edit this news", edit_news_path(@news) %> |
      <%= button_to "Destroy this news", @news, method: :delete %>
    <% end %>
  <% end %>
</div>
